        <Label x:Name="FromPath_label" Content="" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy1" Content="To:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SpecifyTo_button" Content="..." HorizontalAlignment="Left" Margin="55,48,0,0" VerticalAlignment="Top" Width="60" Click="SpecifyTo_button_Click"/>
        <Label x:Name="ToPath_label" Content="" HorizontalAlignment="Left" Margin="120,45,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Go_button" Content="Go!" HorizontalAlignment="Left" Margin="10,75.96,0,0" VerticalAlignment="Top" Width="105" Click="Go_button_Click"/>

    </Grid>
</Window>
